{% extends "contentj.jinja2" %}
<title>ZoomToExtent Control</title>

{% block headbody %}

    <link rel="stylesheet" href="https://www.osgeo.cn/static/f2elib/ol-7.4.x/ol.css" type="text/css">

    <!--导入最新版本ol的js文件。-->
    <script src="https://www.osgeo.cn/static/f2elib/ol-7.4.x/dist/ol.js"></script>


    <style>
        #olmap {
            border: 1px solid #ddd;
            width: 99%;
            height: 400px;
        }
    </style>

{% endblock %}

{% block cntbody %}

    <div id="olmap" class="olmap"></div>

    <script>
        //加载地图
        var olmap = new ol.Map({
            controls: ol.control.defaults.defaults({			//设置控件中的控件集。
                attributionOptions: {				//属性选项
                    collapsible: false				//折叠属性。
                }
            }).extend([
                new ol.control.ZoomToExtent({		//按钮控件，当按下时，将地图视图更改为特定范围。使用CSS选择器
                    //来调整此控件的样式
                    extent: [				//放大的程度。如果未定义，则使用视图投影的有效范围。
                        813079.7791264898, 5929220.284081122,
                        848966.9639063801, 5936863.986909639
                    ]
                })
            ]),
            layers: [	//加载图层
                new ol.layer.Tile({  //加载瓦片图层
                    source: new ol.source.Stamen({        //Stamen磁贴服务器的图层源。
                        layer: 'terrain'
                    })
                }),
            ],
            target: 'olmap',		//地图容器div的id
            view: new ol.View({	//地图为2D视图
                center: [0, 0],	//地图初始中心点
                zoom: 2		//地图初始级别
            })
        });
    </script>

{% endblock %}
<!--这个例子显示了如何使用ol.control.ZoomToExtent控制装置-->